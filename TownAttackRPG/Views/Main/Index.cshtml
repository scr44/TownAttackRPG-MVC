
@{
    ViewData["Title"] = "Index";
}

<div class="main-menu-grid">
    <header class="menu-title">
        TOWN ATTACK RPG
    </header>
    <div class="main-menu-options-grid">
        <form asp-controller="NewGame">
            <button class="newgame-button">
                <content>NEW GAME</content>
